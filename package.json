{
  "name": "@veryan/clock-component",
  "version": "1.0.1",
  "license": "MIT",
  "description": "This is an analog clock webcomponent",
  "author": "Veryan Goodship",
  "homepage": "https://veryan.ca",
  "type": "module",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Veryan4/clock.git"
  },
  "bugs": {
    "url": "https://github.com/Veryan4/clock/issues"
  },
  "keywords": [
    "webcomponent",
    "lit",
    "clock",
    "analog",
    "ts",
    "typescript"
  ],
  "main": "./dist/clock.cjs",
  "module": "./dist/clock.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/clock.js",
      "require": "./dist/clock.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite --mode=dev",
    "build": "tsc && vite build",
    "serve": "vite preview",
    "lint": "eslint --ext .ts --fix src",
    "format": "prettier . --write",
    "test": "jest src"
  },
  "devDependencies": {
    "@types/jest": "27.0.1",
    "@types/node": "^18.11.18",
    "jest": "27.1.0",
    "prettier": "2.3.2",
    "ts-jest": "27.0.5",
    "typescript": "4.3.2",
    "vite": "4.0.4",
    "vite-plugin-dts": "^1.7.1"
  },
  "dependencies": {
    "lit": "2.6.1"
  }
}
